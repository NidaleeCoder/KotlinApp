<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <TextView
      android:id="@+id/item_knowledge_list_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="12dp"
      android:layout_marginRight="16dp"
      android:layout_marginLeft="16dp"
      android:maxLines="2"
      android:ellipsize="end"
      android:textSize="14sp"
      android:textColor="#191a19"
      tools:text="标题"
      />

  <TextView
      android:id="@+id/item_knowledge_list_author"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/item_knowledge_list_title"
      app:layout_constraintLeft_toLeftOf="@+id/item_knowledge_list_title"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="12dp"
      android:layout_marginTop="12dp"
      android:textSize="13sp"
      android:text="nidalee"
      android:textColor="@color/colorPrimary"
      />

  <TextView
      android:id="@+id/item_knowledge_list_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/item_knowledge_list_title"
      app:layout_constraintRight_toRightOf="@+id/item_knowledge_list_title"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="12dp"
      android:layout_marginTop="12dp"
      android:textSize="13sp"
      android:text="nidalee"
      android:textColor="#bd63d9"
      />

</android.support.constraint.ConstraintLayout>